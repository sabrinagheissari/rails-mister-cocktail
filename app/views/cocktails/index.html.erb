<div class="d-flex" style="height:100vh">
  <div style="background-color:#F2F3F4; color:grey; width: 50vw; height: 100vh; display:inline-block;flex:1">
    <div style="height: 100vh">
      <ul class="slideshow">
        <li><span>SABBY SNACKS</span></li>
        <li><span>SABBY SNACKS</span></li>
        <li><span>SABBY SNACKS</span></li>
        <li><span>SABBY SNACKS</span></li>
      </ul>
    </div>
  </div>
  <div class="text-stuff" style="background-color:#F2F3F4; width: 50vw; height: 100vh; display: grid; overflow: scroll">
    <!-- <h1 class="pl-2 color:white position:relative">Sabby Snacks</h1>
    <h2 class="pl-2 vw-50 color:white"></h2> -->
    <!-- <div style="display: flex"> -->
    <div>
      <ul class="p-0">
        <div class="container">
          <div class="row">
            <% @cocktails.each do |cocktail| %>
              <div class="cocktail-card p-0" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo%>')">
                    <h1><%= cocktail.name.downcase %></h1>
                  <%= link_to "", cocktail_path(cocktail), class: 'cocktail-card-link' %>
              </div>
            <% end %>
          </div>
        </div>
      </ul>
    </div>
    <div style="height: 15vh">
      <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.submit "Create a Cocktail", class: 'btn', style: 'color:grey' %>
      <%= f.input :photo, class: 'btn_dark' %>
      <%= f.input :photo_cache, as: :hidden%>
      <% end %>
    </div>
    <!-- </div> -->
  </div>
</div>




