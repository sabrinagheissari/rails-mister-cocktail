<% if @cocktail.photo.file %>
  <div class="cocktail_page" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo%>')">
    <h1><%= @cocktail.name.downcase %></h1>
      <ul >
          <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description.downcase %>
          of
          <%= dose.ingredient.name.downcase %>
        </li>
          <% end %>
      </ul>
    <button class="cocktail_page_btn"><%= link_to "New Dose", new_cocktail_dose_path(@cocktail), class: "cocktail_page_btn"%></button>
    <button class="cocktail_page_btn"><%= link_to "Delete", cocktail_path(@cocktail), method: :delete, class: "cocktail_page_btn"%></button>
    <button class="cocktail_page_btn"><%= link_to "Home", cocktails_path, class: "cocktail_page_btn"%></button>
  </div>
<% else%>
  <div class="cocktail_page" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "#{rand(1..13)}.jpg"%>)">
    <h1><%= @cocktail.name.downcase %></h1>
      <ul >
          <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description.downcase %>
          of
          <%= dose.ingredient.name.downcase %>
        </li>
          <% end %>
      </ul>
    <button class="cocktail_page_btn"><%= link_to "New Dose", new_cocktail_dose_path(@cocktail), class: "cocktail_page_btn"%></button>
    <button class="cocktail_page_btn"><%= link_to "Delete", cocktail_path(@cocktail), method: :delete, class: "cocktail_page_btn"%></button>
    <button class="cocktail_page_btn"><%= link_to "Home", cocktails_path, class: "cocktail_page_btn"%></button>
  </div>
<% end %>
