<div class="big-container d-flex">
  <div style="background-color:black; color:grey; width: 50vw; height: 100vh; display:inline-block;flex:1">
    <div style="height: 70vh">
      <ul class="slideshow">
        <li><span>test1</span></li>
        <li><span>test2</span></li>
        <li><span>test3</span></li>
        <li><span>test4</span></li>
      </ul>
    </div>
    <div>
      <div>
        <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.submit "Create a Cocktail", class: 'btn', style: 'color:grey' %>
        <%= f.input :photo, class: 'btn_dark' %>
        <%= f.input :photo_cache, as: :hidden%>
        <% end %>
      </div>
    </div>
  </div>
  <div class="text-stuff" style="background-color:black; width: 50vw; height: 100vh; display: inline-block;">
      <h1 class="pl-2 color:white position:relative">DOSES AND MIMOSAS</h1>
      <h2 class="pl-2 vw-50 color:white">champage and sustain ðŸ˜Ž</h2>
    <div>
      <ul class="p-0">
        <div class="container">
          <div class="row">
            <% @cocktails.each do |cocktail| %>
              <div class="cocktail-card col p-0" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo%>')">
                    <h1><%= cocktail.name.downcase %></h1>
                  <%= link_to "", cocktail_path(cocktail), class: 'cocktail-card-link' %>
              </div>
            <% end %>
          </div>
        </div>
      </ul>
    </div>
  </div>
</div>




